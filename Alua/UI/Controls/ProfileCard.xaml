<UserControl
    x:Class="Alua.UI.Controls.ProfileCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Alua.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    BorderBrush="#000000"
    BorderThickness="2"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Bottom row with descriptions -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Games"/>
        <TextBlock Grid.Row="1" Grid.Column="2">
            Achievement's <LineBreak/>
            Unlocked
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="4">
            Library <LineBreak/>
            Complete
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="6">
            Perfect <LineBreak/>
            Games
        </TextBlock>

        <!--Top row with values -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Bind settingsVM.Games.Count}" FontSize="24"/>
        <Border Height="10" BorderBrush="#000000" BorderThickness="2"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="{x:Bind Unlocked}" FontSize="24"/>
        <TextBlock Grid.Row="0" Grid.Column="4" Text="{x:Bind PercentComplete}" FontSize="24"/>
        <TextBlock Grid.Row="0" Grid.Column="6" Text="{x:Bind Perfect}" FontSize="24"/>
    </Grid>


</UserControl>

